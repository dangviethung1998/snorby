<%= title "Forgot your password?" -%>
<div class="content-box">
  <div class="content-box-title">
    Quên mật khẩu?
  </div>
  <div class="content-box-body">
    <div id='password'>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'validate' }) do |f| %>

    <div class='login-note'>
      <i class="icon-question-sign"></i>
      Nhập email của bạn và chúng tôi sẽ gửi email xác nhận
    </div>

    <p class='item'>
      <%= f.label :email %><br />
      <%= f.text_field :email, :title => 'E-mail...', :placeholder => 'email@email.com', :autocomplete => :off, :class => 'required email' %>
    </p>
      <button class="login-button login-default">Gửi email</button>
      <%= link_to 'Quay lại', new_user_session_path, class: 'login-button', :"data-no-turbolink" => "true" %>
  <% end %>

  </div>
  </div>
</div>
